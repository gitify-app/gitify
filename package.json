{
  "name": "gitify",
  "version": "4.4.0",
  "description": "GitHub Notifications on your menu bar.",
  "main": "main.js",
  "scripts": {
    "build": "webpack --config webpack.prod.js",
    "watch": "webpack --config webpack.common.js --watch",
    "make:linux": "electron-builder --linux",
    "make:macos": "electron-builder --mac --universal",
    "make:win": "electron-builder --win",
    "prettier:check": "prettier --check 'src/**/*.{js,ts,tsx}'",
    "prettier:apply": "prettier --write 'src/**/*.{js,ts,tsx}'",
    "test": "jest",
    "start": "electron . --enable-logging",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gitify-app/gitify.git"
  },
  "keywords": [
    "gitify",
    "github",
    "notifier",
    "notifications",
    "electron",
    "atom",
    "shell",
    "app",
    "tray"
  ],
  "author": {
    "name": "Emmanouil Konstantinidis",
    "email": "hello@manos.im"
  },
  "contributors": [
    {
      "name": "Emmanouil Konstantinidis",
      "url": "https://github.com/manosim"
    },
    {
      "name": "Jake 'Sid' Smith",
      "url": "https://github.com/JakeSidSmith"
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/manosim/gitify/issues"
  },
  "homepage": "https://www.gitify.io/",
  "build": {
    "appId": "com.electron.gitify",
    "productName": "Gitify",
    "files": [
      "build/**/*",
      "assets/**/*",
      "index.html",
      "LICENSE",
      "main.js",
      "first-run.js"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "assets/images/app-icon.icns",
      "identity": "Emmanouil Konstantinidis (3YP8SXP3BF)",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "./entitlements/entitlements.mac.plist",
      "entitlementsInherit": "./entitlements/entitlements.mac.plist",
      "publish": [
        "github"
      ]
    },
    "dmg": {
      "icon": "assets/images/app-icon.icns",
      "sign": false
    },
    "win": {
      "target": "nsis",
      "icon": "assets/images/app-icon.ico"
    },
    "nsis": {
      "oneClick": false
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Development",
      "maintainer": "Emmanouil Konstantinidis"
    },
    "afterSign": "scripts/notarize.js"
  },
  "dependencies": {
    "@electron/remote": "2.0.11",
    "@primer/octicons-react": "19.8.0",
    "axios": "1.5.1",
    "date-fns": "2.30.0",
    "electron-updater": "6.1.4",
    "final-form": "4.20.10",
    "menubar": "9.3.0",
    "nprogress": "0.2.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-final-form": "6.5.9",
    "react-router": "6.16.0",
    "react-router-dom": "6.16.0",
    "react-transition-group": "4.4.5",
    "ts-loader": "9.5.0",
    "typescript": "5.2.2"
  },
  "devDependencies": {
    "@testing-library/react": "14.0.0",
    "@testing-library/react-hooks": "8.0.1",
    "@types/jest": "29.5.5",
    "@types/node": "18.18.0",
    "@types/react": "18.2.28",
    "@types/react-router-dom": "5.3.3",
    "@types/react-transition-group": "4.4.7",
    "autoprefixer": "10.4.16",
    "coveralls": "3.1.1",
    "css-loader": "6.8.1",
    "electron": "^13.1.7",
    "electron-builder": "24.6.4",
    "electron-notarize": "1.2.2",
    "jest": "29.7.0",
    "jest-environment-jsdom": "29.7.0",
    "nock": "13.3.4",
    "postcss": "8.4.31",
    "postcss-loader": "7.3.3",
    "prettier": "3.0.3",
    "react-test-renderer": "18.2.0",
    "style-loader": "3.3.3",
    "tailwindcss": "3.3.3",
    "ts-jest": "29.1.1",
    "webpack": "5.88.2",
    "webpack-cli": "5.1.4",
    "webpack-merge": "5.9.0",
    "husky": "8.0.3"
  },
  "packageManager": "pnpm@8.9.0",
  "lint-staged": {
    "*.{md,js,ts,tsx}": "prettier --write"
  }
}
