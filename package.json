{
  "name": "gitify",
  "version": "6.11.1",
  "description": "GitHub notifications on your menu bar.",
  "main": "out/main/index.js",
  "scripts": {
    "clean": "rimraf out coverage dist node_modules",
    "build": "electron-vite build",
    "dev": "electron-vite dev",
    "preview": "electron-vite preview",
    "package:linux": "electron-builder --linux --config ./config/electron-builder.js",
    "package:macos": "electron-builder --mac --config ./config/electron-builder.js",
    "package:win": "electron-builder --win --config ./config/electron-builder.js",
    "lint:check": "biome check",
    "lint": "biome check --fix",
    "test": "jest",
    "start": "electron out/main/index.js --enable-logging",
    "prepare": "husky"
  },
  "engines": {
    "node": ">=22"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gitify-app/gitify.git"
  },
  "keywords": [
    "gitify",
    "github",
    "notifications",
    "electron",
    "menubar",
    "taskbar",
    "tray"
  ],
  "author": {
    "name": "Adam Setch",
    "url": "https://github.com/setchy"
  },
  "contributors": [
    {
      "name": "Emmanouil Konstantinidis",
      "url": "https://github.com/manosim"
    },
    {
      "name": "Jake 'Sid' Smith",
      "url": "https://github.com/JakeSidSmith"
    },
    {
      "name": "Adam Setch",
      "url": "https://github.com/setchy"
    },
    {
      "name": "Afonso Ramos",
      "url": "https://github.com/afonsojramos"
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gitify-app/gitify/issues"
  },
  "homepage": "https://gitify.io/",
  "dependencies": {
    "electron-log": "5.4.3",
    "electron-updater": "6.6.2",
    "menubar": "9.5.2",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-router-dom": "7.9.5"
  },
  "devDependencies": {
    "@babel/core": "7.28.5",
    "@babel/preset-env": "7.28.5",
    "@biomejs/biome": "2.3.5",
    "@discordapp/twemoji": "16.0.1",
    "@electron/notarize": "3.1.1",
    "@primer/css": "22.0.2",
    "@primer/octicons-react": "19.20.0",
    "@primer/primitives": "11.3.0",
    "@primer/react": "38.1.0",
    "@tailwindcss/vite": "4.1.13",
    "@testing-library/jest-dom": "6.9.1",
    "@testing-library/react": "16.3.0",
    "@testing-library/user-event": "14.6.1",
    "@types/jest": "30.0.0",
    "@types/node": "24.10.1",
    "@types/react": "19.2.3",
    "@types/react-dom": "19.2.3",
    "@types/react-router-dom": "5.3.3",
    "@types/semver": "7.7.1",
    "axios": "1.13.2",
    "babel-jest": "30.2.0",
    "clsx": "2.1.1",
    "concurrently": "9.2.1",
    "date-fns": "4.1.0",
    "electron": "39.1.2",
    "electron-builder": "26.0.12",
    "electron-vite": "4.0.0",
    "final-form": "5.0.0",
    "graphql-tag": "2.12.6",
    "husky": "9.1.7",
    "identity-obj-proxy": "3.0.0",
    "jest": "30.2.0",
    "jest-environment-jsdom": "30.2.0",
    "nock": "13.5.6",
    "rimraf": "6.1.0",
    "semver": "7.7.3",
    "styled-components": "6.1.19",
    "tailwind-merge": "3.4.0",
    "tailwindcss": "4.1.17",
    "to-fast-properties": "^4.0.0",
    "ts-jest": "29.4.5",
    "ts-loader": "9.5.4",
    "ts-node": "10.9.2",
    "typescript": "5.9.3",
    "vite": "7.1.5",
    "vite-plugin-static-copy": "3.1.2"
  },
  "packageManager": "pnpm@10.21.0",
  "pnpm": {
    "onlyBuiltDependencies": [
      "@biomejs/biome",
      "@tailwindcss/oxide",
      "electron",
      "esbuild"
    ]
  },
  "lint-staged": {
    "*": "biome check --fix --no-errors-on-unmatched",
    "*.{js,ts,tsx}": "pnpm test --findRelatedTests --passWithNoTests --updateSnapshot"
  }
}
