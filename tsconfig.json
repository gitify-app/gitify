{
  "compilerOptions": {
    "incremental": true,
    "target": "es2022",
    "module": "commonjs",
    "lib": ["dom", "es2022"],
    "jsx": "react-jsx",
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "outDir": "./build/"
  },
  "include": ["src/**/*.js", "src/**/*.ts", "src/**/*.tsx"]
}
