{
  "compilerOptions": {
    "module": "es6",
    "moduleResolution": "node",
    "target": "es2022",
    "outDir": "./build/",
    "sourceMap": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "jsx": "react-jsx",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "types": ["jest"],
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.js",
    "src/**/*.ts",
    "src/**/*.tsx",
    "first-run.js",
    "main.js"
  ]
}
