{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ESNext",
    "outDir": "build",
    "sourceMap": true,
    // TODO: enable noImplicitAny
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "types": ["jest"],
    // "skipLibCheck": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.js", "src/**/*.ts", "src/**/*.tsx", "src/**/*.mjs"],
}
