{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":separateMultipleMajorReleases",
    ":enableVulnerabilityAlerts",
    "schedule:weekly",
    "customManagers:biomeVersions"
  ],
  "labels": ["dependency"],
  "prConcurrentLimit": 5,
  "rangeStrategy": "pin",
  "packageRules": [
    {
      "matchDepTypes": ["engines"],
      "rangeStrategy": "auto"
    },
    {
      "description": "Wait 7 days before suggesting new updates",
      "matchDatasources": ["npm"],
      "minimumReleaseAge": "7 days",
      "internalChecksFilter": "strict"
    },
    {
      "description": "Remove word `dependency` from commit messages and PR titles",
      "matchDatasources": ["npm"],
      "commitMessageTopic": "{{depName}}"
    }
  ],
  "customManagers": [
    {
      "description": "Keep sonar.projectVersion variables in sonar-project.properties in-sync",
      "customType": "regex",
      "datasourceTemplate": "github-tags",
      "depNameTemplate": "gitify-app/gitify",
      "versioningTemplate": "loose",
      "fileMatch": ["sonar-project.properties"],
      "matchStrings": ["\\s?sonar.projectVersion=(?<currentValue>.+?)\\s"]
    }
  ]
}
